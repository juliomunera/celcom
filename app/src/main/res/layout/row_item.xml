<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    android:columnCount="3"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView"
        android:layout_columnWeight="0.5"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/circle"
        android:src="@drawable/ic_person"
        android:contentDescription="@string/descriptionContact" />
    <LinearLayout
        android:layout_columnWeight="2"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:textAlignment="textStart"
            android:layout_marginEnd="0sp"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:layout_marginStart="0sp"
            android:layout_marginTop="0sp"
            android:textSize="0sp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0sp"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:layout_marginStart="0sp"
            android:layout_marginTop="0sp"
            android:textColor="@color/solidCircle"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/rowCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0sp"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:layout_marginStart="0sp"
            android:textSize="10sp"
            android:textColor="@color/primaryButton" />
    </LinearLayout>
    <ImageView
        android:id="@+id/phoneImage"
        android:layout_columnWeight="0.5"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:src="@drawable/ic_phone_black_24dp"
        android:contentDescription="@string/descriptionCall" />
</GridLayout>
