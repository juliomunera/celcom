<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.SecurityFragment">
    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_marginTop="180dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="@string/codeLabel"
                android:textColor="@color/primaryButton"
                android:textSize="22sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0sp"
                android:layout_gravity="center_horizontal"
                android:layout_height="25dp" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edtCode"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#D77A20"
                android:gravity="center_horizontal"
                android:hint="@string/unlockCode"
                android:imeActionLabel="@string/unlockCode"
                android:inputType="number"
                android:maxLength="5"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textAllCaps="true"
                android:textSize="28dp"
                android:textStyle="bold"
                android:autofillHints="" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0sp"
                android:layout_gravity="center_horizontal"
                android:layout_height="25dp" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/btnOK"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/acceptButton" />
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/cancelButton" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>
</FrameLayout>